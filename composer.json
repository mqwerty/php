{
  "name": "mqwerty/php",
  "type": "project",
  "license": "MIT",
  "description": "Skeleton for PHP projects",
  "authors": [
    {
      "name": "Dmitrii Elkin",
      "email": "de@mqwerty.ru"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Dev\\": "src-dev"
    }
  },
  "require": {
    "php": "^7.4",
    "ext-json": "*",
    "ext-zend-opcache": "*",
    "laminas/laminas-diactoros": "^2.2",
    "laminas/laminas-httphandlerrunner": "^1.1",
    "nikic/fast-route": "^1.3",
    "php-di/php-di": "^6.1",
    "symfony/console": "^5.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "ext-ast": "*",
    "codeception/codeception": "^4.0",
    "codeception/module-asserts": "^1.0",
    "phan/phan": "^2.4",
    "filp/whoops": "^2.7",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "scripts": {
    "test": "codecept run --debug",
    "cover": "codecept run --coverage --coverage-html",
    "stan": "phan --color --progress-bar",
    "cs_check": "phpcs ./src --standard=PSR12",
    "cs_fix": "phpcbf ./src --standard=PSR12"
  }
}
